{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ reservation.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Datecheckin</th>
                <td>{{ reservation.datecheckin ? reservation.datecheckin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Datecheckout</th>
                <td>{{ reservation.datecheckout ? reservation.datecheckout|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservation_index') }}">back to list</a>

    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
